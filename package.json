{
    "private": true,
    "name": "remix-site",
    "description": "My website, built using remix",
    "license": "",
    "scripts": {
        "start": "npm run dev",
        "build": "npm run build:css && remix build",
        "build:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css --minify",
        "dev": "concurrently \"npm run dev:css\" \"cross-env NODE_ENV=development PORT=4000 remix dev\"",
        "dev:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css --watch",
        "postinstall": "rm -f .eslintignore && remix setup node && ln -s .gitignore .eslintignore",
        "clean": "rm -rf .cache public/build app/tailwind.css",
        "lint:fix": "eslint --fix ./app",
        "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,scss,md,json}'"
    },
    "dependencies": {
        "@remix-run/react": "^1.7.5",
        "@remix-run/serve": "^1.7.5",
        "@remix-run/vercel": "^1.7.5",
        "@xstate/react": "^3.0.1",
        "airtable": "^0.11.5",
        "brise": "^0.1.0",
        "daisyui": "^2.39.1",
        "dotenv": "^16.0.3",
        "front-matter": "^4.0.2",
        "marked": "^4.2.2",
        "npm": "^9.1.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.6.0",
        "remix": "^1.7.5",
        "tiny-invariant": "^1.3.1",
        "xstate": "^4.34.0",
        "zod": "^3.19.1"
    },
    "devDependencies": {
        "@remix-run/dev": "^1.7.5",
        "@tailwindcss/typography": "^0.5.8",
        "@trivago/prettier-plugin-sort-imports": "^3.4.0",
        "@types/marked": "^4.0.7",
        "@types/react": "^18.0.25",
        "@types/react-dom": "^18.0.8",
        "@typescript-eslint/eslint-plugin": "^5.42.1",
        "@typescript-eslint/parser": "^5.42.1",
        "autoprefixer": "^10.4.13",
        "babel-plugin-module-resolver": "^4.1.0",
        "concurrently": "^7.5.0",
        "cross-env": "^7.0.3",
        "esbuild": "^0.14.54",
        "eslint": "^8.27.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-babel-module": "^5.3.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.6.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.31.10",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-simple-import-sort": "^8.0.0",
        "eslint-plugin-tailwindcss": "^3.6.2",
        "husky": "^8.0.2",
        "lint-staged": "^13.0.3",
        "mdx-bundler": "^9.0.1",
        "postcss": "^8.4.19",
        "prettier": "^2.7.1",
        "tailwindcss": "^3.2.4",
        "typescript": "^4.8.4"
    },
    "engines": {
        "node": ">=16"
    },
    "sideEffects": false,
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "./**/*.{js,jsx,ts,tsx}": [
            "eslint"
        ]
    }
}
