{
    "private": true,
    "name": "remix-site",
    "description": "My website, built using remix",
    "license": "",
    "scripts": {
        "build": "npm run build:css && remix build",
        "build:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css --minify",
        "dev": "concurrently \"npm run dev:css\" \"cross-env NODE_ENV=development remix dev\"",
        "dev:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css --watch",
        "postinstall": "remix setup node && ln -s .gitignore .eslintignore",
        "deploy": "netlify deploy",
        "clean": "rm -rf .cache public/build app/tailwind.css",
        "lint": "eslint --fix .",
        "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,scss,md,json}'"
    },
    "dependencies": {
        "@remix-run/react": "^1.0.6",
        "@remix-run/serve": "^1.0.6",
        "@remix-run/vercel": "^1.0.6",
        "airtable": "^0.11.1",
        "brise": "^0.1.0",
        "contentful": "^9.1.10",
        "daisyui": "^1.25.4",
        "dotenv": "^16.0.0",
        "front-matter": "^4.0.2",
        "marked": "^4.0.12",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-icons": "^4.3.1",
        "remix": "^1.1.3",
        "tiny-invariant": "^1.2.0",
        "zod": "^3.11.6"
    },
    "devDependencies": {
        "@remix-run/dev": "^1.1.3",
        "@trivago/prettier-plugin-sort-imports": "^3.2.0",
        "@types/marked": "^4.0.2",
        "@types/react": "^17.0.24",
        "@types/react-dom": "^17.0.9",
        "@typescript-eslint/eslint-plugin": "^5.11.0",
        "@typescript-eslint/parser": "^5.11.0",
        "autoprefixer": "^10.4.2",
        "concurrently": "^7.0.0",
        "cross-env": "^7.0.3",
        "esbuild": "^0.14.21",
        "eslint": "^8.8.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-babel-module": "^5.3.1",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.3",
        "mdx-bundler": "^8.0.1",
        "postcss": "^8.4.6",
        "prettier": "^2.5.1",
        "tailwindcss": "^3.0.18",
        "typescript": "^4.1.2"
    },
    "engines": {
        "node": ">=14"
    },
    "sideEffects": false,
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "./**/*.{js,jsx,ts,tsx}": [
            "eslint"
        ]
    }
}
